    <style>
        @media screen and (max-width: 768px) {
            .navbar_logo {
                display: none;
            }

            .navbar_items {
                display: flex;
                justify-content: center;
            }
        }
    </style>
    <style>
        .navbar {
            width: 85%;
            height: 60px;
            margin-top: 20px;
            border: 1px solid var(--border-color);
            background-color: var(--background-component);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding-left: 10px;
            padding-right: 10px;
            border-radius: 5px;
            backdrop-filter: blur(20px);
            position: fixed;
        }

        .navbar_logo {
            width: 35px;
        }

        .navbar_logo img {
            width: 100%;
        }

        .navbar_items_container {
            width: 100%;
        }

        .navbar_items {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 10px;
            width: 100%;
            height: 100%;
        }
    </style>

    <style>
        .navbar_item {
            display: flex;
            padding: 5px 15px;
            border-radius: 5px;
            align-items: center;
            justify-content: center;
            color: #d4d4d4;
            font-size: 12px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
        }

        .navbar_item:hover {
            background-color: var(--background-component-selected);
        }

        .navbar_item svg {
            width: 16px;
            margin-right: 7px;
        }
    </style>
</header>
